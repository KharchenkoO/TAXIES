@model TAXIES.Models.Driver

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Driver</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DriverPassport)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DriverPassport)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DriverName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DriverName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DriverBirth)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DriverBirth)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DriverTel)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DriverTel)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Client</th>
                    <th>Car</th>
                    <th>Departure time</th>
                    <th>Departure place</th>
                    <th>Destination place</th>
                </tr>
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client.ClientName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Car.CarNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepPlace)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DestPlace)
                        </td>

                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DriverID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
