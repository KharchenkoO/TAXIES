@model IEnumerable<TAXIES.Models.Driver>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DriverPassport)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.DriverName)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverBirth)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TelSortParm"]">@Html.DisplayNameFor(model => model.DriverTel)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DriverPassport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverTel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DriverID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DriverID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DriverID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
